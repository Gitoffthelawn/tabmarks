{
  "name": "tabmarks",
  "version": "1.0.0-beta.2",
  "description": "Web Extension for handling groups of tabs persisted as bookmarks",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "clean": "rm -rf dist",
    "start": "npm-run-all clean build:webpack --parallel watch:webpack watch:web-ext",
    "watch:webpack": "webpack --watch",
    "watch:web-ext": "web-ext run",
    "lint": "eslint .",
    "build": "npm-run-all clean build:webpack build:web-ext",
    "build:webpack": "webpack",
    "build:web-ext": "web-ext build --source-dir=dist --ignore-files=package.json yarn.lock \"**/*.test.js\" --overwrite-dest",
    "sign": "web-ext sign --source-dir=dist --api-key=$AMO_JWT_ISSUER --api-secret=$AMO_JWT_SECRET"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hupf/tabmarks.git"
  },
  "author": "Mathis Hofer",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hupf/tabmarks/issues"
  },
  "homepage": "https://github.com/hupf/tabmarks#readme",
  "dependencies": {
    "rxjs": "^5.4.3"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.24.1",
    "copy-webpack-plugin": "^4.0.1",
    "eslint": "^4.7.2",
    "eslint-config-airbnb-base": "^11.3.2",
    "eslint-plugin-import": "^2.7.0",
    "jest": "^21.2.0",
    "npm-run-all": "^4.1.1",
    "web-ext": "^2.0.0",
    "webpack": "^3.6.0"
  },
  "jest": {
    "clearMocks": true
  }
}
